<?xml version="1.0" encoding="UTF-8"?>
<infinispan xmlns="urn:infinispan:config:14.0">
    <cache-container name="keycloak">
        <transport stack="tcp"/>
        
        <!-- Authorization Cache -->
        <local-cache name="authorization">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <memory max-count="100"/>
            <expiration lifespan="900000"/>
        </local-cache>

        <!-- Authentication Cache -->
        <local-cache name="authentication">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <memory max-count="100"/>
            <expiration lifespan="900000"/>
        </local-cache>

        <!-- Keys Cache -->
        <local-cache name="keys">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration max-idle="3600000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Action Tokens Cache -->
        <local-cache name="actionTokens">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration max-idle="300000" interval="300000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Realms Cache -->
        <local-cache name="realms">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <memory max-count="100"/>
        </local-cache>

        <!-- Users Cache -->
        <local-cache name="users">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <memory max-count="100"/>
        </local-cache>

        <!-- Sessions Cache -->
        <local-cache name="sessions">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="900000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Authentication Sessions Cache -->
        <local-cache name="authenticationSessions">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="600000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Offline Sessions Cache -->
        <local-cache name="offlineSessions">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="86400000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Client Sessions Cache -->
        <local-cache name="clientSessions">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="900000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Work Cache -->
        <local-cache name="work">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="900000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Offline Client Sessions Cache -->
        <local-cache name="offlineClientSessions">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="86400000"/>
            <memory max-count="100"/>
        </local-cache>

        <!-- Login Failures Cache -->
        <local-cache name="loginFailures">
            <encoding>
                <key media-type="application/x-java-object"/>
                <value media-type="application/x-java-object"/>
            </encoding>
            <expiration lifespan="900000"/>
            <memory max-count="100"/>
        </local-cache>
    </cache-container>
</infinispan> 